extends layout

block content
  div.container
    div.col-sm-6.col-md-4.col-md-offset-4
      #user
        h1.text-center.login-title Welcome #{user.firstName}. Check your details below:
          div.signup-wall
            ul.user-details
              li Username ---> #{user.username}
                li Email    ---> #{user.email}
                li First Name ---> #{user.firstName} 
                li Last Name ---> #{user.lastName}
                li Is Teacher ---> #{user.isTeacher}
                li Is Student ---> #{user.isStudent}
            a(href='/signout', class='text-center new-account') Sign Out

    #user
      div.col-sm-10.col-md-10.col-md-offset-1
        h1.text-center.login-title All Homeworks
          div
            table.table.table-hover
              thead
                tr
                  th.text-center student name
                  th.text-center content
                  th.text-center date
                  th.text-center grade
                  if user.isTeacher
                    th.text-center option
              tbody
                #submissions
                  for entry in submissions
                    tr
                      td= entry.student
                      td= entry.content
                      td= entry.date
                      td= entry.gratde
                      if user.isTeacher
                        td
                          form(method='GET' action='/home')
                            button(class='btn btn-sm btn-primary', type='submit') Give a grade
